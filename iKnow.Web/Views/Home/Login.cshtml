@model iKnow.Web.Models.LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login</title>
</head>
<body>
    <h3>Registration</h3>
    <div>
        @using (Html.BeginForm())
        {
            <div>
                <p><input type="text" asp-for="Login" placeholder="Login" /></p>
            </div>
            <div>
                <p><input type="text" asp-for="Password" placeholder="Password" /></p>
            </div>
            <div>
                <input type="submit" value="Login" />
            </div>

        }
    </div>
</body>
</html>