@model IEnumerable<iKnow.Web.Models.UserViewModel>
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <title>User list</title>
</head>
<body>
    <h3>Users</h3>
    <table>
        <tr>
            <td>User</td>
            <td>Email</td>
            <td></td>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.Email</td>
                <td><a href="~/Home/Tab/@user.Login"> Detail information</a></td>
            </tr>
        }
    </table>
</body>
</html>